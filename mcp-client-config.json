{
  "mcp_servers": {
    "sigaa-ufpa": {
      "name": "SIGAA UFPA MCP Server",
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "sigaa-ufpa-mcp:latest"
      ],
      "env": {
        "GEMINI_API_KEY": "COLE_SUA_API_KEY_DO_GEMINI_AQUI",
        "SIGAA_USERNAME": "COLE_SEU_USUARIO_SIGAA_AQUI",
        "SIGAA_PASSWORD": "COLE_SUA_SENHA_SIGAA_AQUI",
        "MCP_TRANSPORT": "stdio",
        "LOG_LEVEL": "INFO",
        "CHROME_HEADLESS": "true"
      }
    }
  }
}